<p id="notice"><%= notice %></p>
<div class="container my-3">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 py-4">
      <%= link_to('Agregar numero',new_raffle_path, class: "btn btn-success col-sm-12 col-md-12 ") %>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 py-4">
      <table class="table table-responsive-xl table-hover table-fixed">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Nombre</th>
            <th>Numero</th>
            <th>Status</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% @raffles.each do |raffle| %>
            <tr class="alert" role="alert">
              <td></td>
              <td>
                <div class="img" style="background-image: url(images/person_1.jpg);"></div>
                <div class="pl-3 email">
                  <span><%= raffle.name.upcase %></span>
                  <span><%= raffle.created_at %></span>
                </div>
              </td>
              <td><%= raffle.number %></td>
              <td class="status"><span class="<%= raffle.status == 'paid' ? 'active' : 'waiting' %>"><%= raffle.status %></span></td>
              <td>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true"><i class="fa fa-close"></i></span>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
